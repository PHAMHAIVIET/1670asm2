﻿@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Web Của Bạn</title>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
            background-color: #333;
            color: white;
            padding: 1em;
            text-align: center;
        }

        nav ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

            nav ul li {
                display: inline;
                margin-right: 20px;
            }

        a {
            text-decoration: none;
            color: white;
        }

        section#products {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .product-card {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 20px;
        }

            .product-card img {
                max-width: 100%;
                height: auto;
            }

        .product-info {
            margin-top: 10px;
        }

            .product-info h4 {
                margin: 0;
            }

            .product-info p {
                margin: 5px 0;
            }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 1em;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
