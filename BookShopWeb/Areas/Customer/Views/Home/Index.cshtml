@{
    ViewData["Title"] = "Trang Chủ";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
            background-color: #333;
            color: white;
            padding: 1em;
            text-align: center;
        }

        nav ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

            nav ul li {
                display: inline;
                margin-right: 20px;
            }

        a {
            text-decoration: none;
            color: white;
        }

        section#products {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .product-card {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 20px;
            width: 23%;
            display: inline-block;
            margin-right: 2%;
            vertical-align: top;
        }

            .product-card img {
                max-width: 100%;
                height: auto;
            }

        .product-info {
            margin-top: 10px;
        }

            .product-info h4 {
                margin: 0;
            }

            .product-info p {
                margin: 5px 0;
            }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 1em;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <header>
        <h1>Trang Web Của Bạn</h1>
        <nav>
            <ul>
                <li><a href="#home">Trang Chủ</a></li>
                <li><a href="#products">Sản Phẩm</a></li>
                <li><a href="#contact">Liên Hệ</a></li>
            </ul>
        </nav>
    </header>

    <section id="products">
        <h2>Danh Sách Sản Phẩm</h2>
        <!-- Đây là nơi để hiển thị danh sách sản phẩm -->
        <!-- Ví dụ: -->
        <div class="product-card">
            <img src="805117bc-bd2c-4386-8ae5-5a3ff92bde49.png" alt="Product 1">
            <div class="product-info">
                <h4>Tên Sản Phẩm 1</h4>
                <p>Mô Tả Sản Phẩm 1</p>
                <p>Giá: $50.00</p>
                <button type="button">Thêm vào Giỏ Hàng</button>
            </div>
        </div>

        <div class="product-card">
            <img src="product2.jpg" alt="Product 2">
            <div class="product-info">
                <h4>Tên Sản Phẩm 2</h4>
                <p>Mô Tả Sản Phẩm 2</p>
                <p>Giá: $40.00</p>
                <button type="button">Thêm vào Giỏ Hàng</button>
            </div>
        </div>

        <div class="product-card">
            <img src="product2.jpg" alt="Product 2">
            <div class="product-info">
                <h4>Tên Sản Phẩm 2</h4>
                <p>Mô Tả Sản Phẩm 2</p>
                <p>Giá: $40.00</p>
                <button type="button">Thêm vào Giỏ Hàng</button>
            </div>
        </div>

        <div class="product-card">
            <img src="product2.jpg" alt="Product 2">
            <div class="product-info">
                <h4>Tên Sản Phẩm 2</h4>
                <p>Mô Tả Sản Phẩm 2</p>
                <p>Giá: $40.00</p>
                <button type="button">Thêm vào Giỏ Hàng</button>
            </div>
        </div>
        <!-- Trong trang HTML của bạn -->
        <div id="products"></div>

        <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
        <script>
            $(document).ready(function () {
                $.ajax({
                    url: '/Home/GetBooks', // Đặt đường dẫn action của bạn ở đây
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        displayBooks(data);
                    },
                    error: function (error) {
                        console.error('Error fetching data:', error);
                    }
                });

                function displayBooks(books) {
                    var productsContainer = $('#products');
                    productsContainer.empty();

                    books.forEach(function (book) {
                        var productCard = $('<div class="product-card">');
                        productCard.append('<img src="' + book.ImageUrl + '" alt="' + book.Title + '">');
                        productCard.append('<div class="product-info"><h4>' + book.Title + '</h4><p>' + book.Description + '</p><p>Giá: $' + book.Price + '</p><button type="button">Thêm vào Giỏ Hàng</button></div>');

                        productsContainer.append(productCard);
                    });
                }
            });
        </script>

        <!-- Thêm các sản phẩm khác vào đây -->
    </section>

    <footer>
        <p>Bản Quyền © 2023 Trang Web Của Bạn</p>
    </footer>
</body>
</html>
