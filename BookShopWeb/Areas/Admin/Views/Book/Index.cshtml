@model List<Book>
<partial name="_Notification" />

<div class="container pt-4">
    <div class="row">
        <div class="col-9">
            <h2>List of Books</h2>
        </div>
        <div class="col-3 text-end">
            <a asp-controller="Book" asp-action="CreateUpdate" class="btn btn-primary">Create New Book</a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: gainsboro; /* Màu nền của trang */
    }

    .container {
        background-color: #ffe6e6; /* Màu nền của phần nội dung */
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 20px;
        text-align: center;
        position: relative;
    }

    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('hacker.jpg'); /* Đường dẫn đến hình ảnh */
        background-size: cover; /* Hiển thị hình ảnh đầy đủ trong phần nền */
        background-repeat: no-repeat; /* Không lặp lại hình ảnh */
        opacity: 0.3; /* Độ trong suốt của hình nền (tùy chọn) */
        z-index: -1; /* Đặt z-index để đặt phần nền phía sau nội dung */
    }

    .logo {
        max-width: 150px; /* Điều chỉnh kích thước của logo */
        z-index: 1; /* Đặt z-index để logo nằm phía trước nền */
        margin-bottom: 20px; /* Khoảng cách giữa logo và tiêu đề */
    }

    .title {
        color: #e44d26; /* Màu chữ cam */
        font-weight: bold; /* Chữ đậm hơn */
        font-size: 32px; /* Kích thước chữ */
        margin-bottom: 20px; /* Khoảng cách giữa tiêu đề và bảng */
    }

    .table {
        border-radius: 10px; /* Độ cong viền cho bảng */
    }

        .table th, .table td {
            border: 2px solid black; /* Màu đen đậm cho đường viền */
            padding: 10px;
        }

        .table thead th {
            background-color: #343a40; /* Màu nền đen đậm cho phần header của bảng */
            color: white; /* Màu chữ trắng */
        }

    .btn-primary {
        background-color: #e44d26; /* Màu nền của nút chính */
        border-color: #e44d26; /* Màu viền của nút chính */
    }

    .btn-danger {
        background-color: #dc3545; /* Màu nền của nút nguy hiểm */
        border-color: #dc3545; /* Màu viền của nút nguy hiểm */
    }
</style>

<div class="container pt-4">
    <div class="background-image"></div>
    <img class="logo" src="~/img/Book logo.png" alt="GWBook Logo">
    <div class="row mt-3">
        <div class="col-12 title">
            <h2>List of Books</h2>
        </div>
    </div>
</div>

<div class="container mt-4">
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Book Title</th>
                <th scope="col">Description</th>
                <th scope="col">Author</th>
                <th scope="col">Price</th>
                <th scope="col">Category</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Description</td>
                    <td>@book.Author</td>
                    <td>@book.Price</td>
                    <td>@book.Category.Name</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Book" asp-action="CreateUpdate" asp-route-id="@book.Id" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>